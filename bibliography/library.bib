@Article{Wedel2012,
  author       = {Mathew J. Wedel},
  date         = {2012},
  journaltitle = {Acta Palaeontologica Polonica},
  title        = {A monument of inefficiency: The presumed course of the recurrent laryngeal nerve in sauropod dinosaurs},
  doi          = {10.4202/app.2011.0019},
  issn         = {0567-7920},
  issue        = {2},
  pages        = {251--256},
  volume       = {57},
  abstract     = {The recurrent laryngeal nerve is an often cited example of "unintelligent design" in biology, especially in the giraffe. The nerve appears early in embryonic development, before the pharyngeal and aortic arches are separated by the development of the neck. The recurrent course of the nerve from the brain, around the great vessels, to the larynx, is shared by all extant tetrapods. Therefore we may infer that the recurrent laryngeal nerve was present in extinct tetrapods, had the same developmental origin, and followed the same course. The longest-necked animals of all time were the extinct sauropod dinosaurs, some of which had necks 14 meters long. In these animals, the neurons that comprised the recurrent laryngeal nerve were at least 28 meters long. Still longer neurons may have spanned the distance from the end of the tail to the brainstem, as in all extant vertebrates. In the longest sauropods these neurons may have been 4050 meters long, probably the longest cells in the history of life.},
  keywords     = {Dinosauria, Sauropoda, larynx, neck, neuron},
}

