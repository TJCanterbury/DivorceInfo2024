@Article{Relyea2018,
  author       = {Relyea, Rick A. and Stephens, Patrick R. and Barrow, Lisa N. and Blaustein, Andrew R. and Bradley, Paul W. and Buck, Julia C. and Chang, Ann and Collins, James P. and Crother, Brian and Earl, Julia and Gervasi, Stephanie S. and Hoverman, Jason T. and Hyman, Oliver and Lemmon, Emily Moriarty and Luhring, Thomas M. and Michelson, Moses and Murray, Chris and Price, Steven and Semlitsch, Raymond D. and Sih, Andrew and Stoler, Aaron B. and VandenBroek, Nick and Warwick, Alexa and Wengert, Greta and Hammond, John I.},
  date         = {2018-03},
  journaltitle = {Evolution; international journal of organic evolution},
  title        = {Phylogenetic patterns of trait and trait plasticity evolution: {Insights} from amphibian embryos},
  doi          = {10.1111/evo.13428},
  issn         = {0014-3820},
  number       = {3},
  pages        = {663--678},
  url          = {https://www.ncbi.nlm.nih.gov/pmc/articles/PMC6131697/},
  urldate      = {2023-10-20},
  volume       = {72},
  abstract     = {Environmental variation favors the evolution of phenotypic plasticity. For many species, we understand the costs and benefits of different phenotypes, but we lack a broad understanding of how plastic traits evolve across large clades. Using identical experiments conducted across North America, we examined prey responses to predator cues. We quantified five life history traits and the magnitude of their plasticity for 23 amphibian species/populations (spanning three families and five genera) when exposed to no cues, crushed-egg cues, and predatory crayfish cues. Embryonic responses varied considerably among species and phylogenetic signal was common among the traits whereas phylogenetic signal was rare for trait plasticities. Among trait-evolution models, the Ornstein Uhlenbeck (OU) model provided the best fit or was essentially tied with Brownian motion. Using the best fitting model, evolutionary rates for plasticities were higher than traits for three life history traits and lower for two. These data suggest that the evolution of life history traits in amphibian embryos is more constrained by a species’ position in the phylogeny than by life history plasticity. The fact that an OU model of trait evolution was often a good fit to patterns of trait variation may indicate adaptive optima for traits and their plasticities.},
  file         = {PubMed Central Link:https\://www.ncbi.nlm.nih.gov/pmc/articles/PMC6131697/:text/html;PubMed Central Full Text PDF:https\://www.ncbi.nlm.nih.gov/pmc/articles/PMC6131697/pdf/nihms-935609.pdf:application/pdf},
  pmcid        = {PMC6131697},
