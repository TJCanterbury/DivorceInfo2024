@Article{Aureli2008,
  author       = {Filippo Aureli and Colleen M. Schaffner and Christophe Boesch and Simon K. Bearder and Josep Call and Colin A. Chapman and Richard Connor and Anthony Di Fiore and Robin I.M. Dunbar and S. Peter Henzi and Kay Holekamp and Amanda H. Korstjens and Robert Layton and Phyllis Lee and Julia Lehmann and Joseph H. Manson and Gabriel Ramos-Fernandez and Karen B. Strier and Carel P. Van Schaik},
  date         = {2008-08},
  journaltitle = {Current Anthropology},
  title        = {Fission-fusion dynamics new research frameworks},
