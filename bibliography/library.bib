@Article{Huys2015,
  author       = {Huys, Quentin J. M. and Daw, Nathaniel D. and Dayan, Peter},
  date         = {2015-07},
  journaltitle = {Annual Review of Neuroscience},
  title        = {Depression: a decision-theoretic analysis},
