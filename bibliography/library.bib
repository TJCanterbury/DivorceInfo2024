@Article{Olschewski2024,
  author       = {Olschewski, Sebastian and Scheibehenne, Benjamin},
  date         = {2024-03},
  journaltitle = {Cognitive Psychology},
  title        = {What’s in a sample? {Epistemic} uncertainty and metacognitive awareness in risk taking},
  doi          = {10.1016/j.cogpsych.2024.101642},
