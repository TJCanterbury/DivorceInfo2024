@Article{Mery2009,
  author       = {Mery, Fr{\'{e}}d{\'{e}}ric and Varela, Susana A. M. and Danchin, {{\'{E}}}tienne and Blanchet, Simon and Parejo, Deseada and Coolen, Isabelle and Wagner, Richard H.},
  date         = {2009-05},
